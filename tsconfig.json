{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "rootDir": "./src/",
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": false,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es6"
    ],
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js",
    "environment.d.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}